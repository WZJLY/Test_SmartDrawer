<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartcabinet.HardwareSetupFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:text="摄像头型号："
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_serialPort" />

    <Spinner
        android:id="@+id/sp_serialPort"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_serialPort"
        app:layout_constraintStart_toEndOf="@+id/tv_serialPort"
        app:layout_constraintTop_toTopOf="@+id/tv_serialPort" />

    <Button
        android:id="@+id/btn_saveSetup"
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_style_denglu"
        android:text="保存"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_serialPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:text="串口号："
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sp_camera"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_camera"
        app:layout_constraintStart_toEndOf="@+id/tv_camera"
        app:layout_constraintTop_toTopOf="@+id/tv_camera" />

</android.support.constraint.ConstraintLayout>
