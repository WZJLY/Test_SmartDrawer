<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/U_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/reagent_operation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/u_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reagent_operation"
        android:layout_width="580dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/kuaisuquhuan_button"
        android:text="试剂操作"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reagent_search"
        android:layout_width="580dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/reagent_operation"
        android:layout_alignStart="@+id/reagent_operation"
        android:layout_below="@+id/reagent_operation"
        android:layout_marginTop="10dp"
        android:background="@drawable/kuaisuquhuan_button"
        android:text="试剂查找"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reagent_operation" />

    <Button
        android:id="@+id/edit_file"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_alignEnd="@+id/reagent_search"
        android:layout_alignRight="@+id/reagent_search"
        android:layout_alignTop="@+id/Record_query"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/qita_button"
        android:text="编辑信息"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/Record_query"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reagent_search" />

    <Button
        android:id="@+id/Record_query"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/reagent_search"
        android:layout_alignStart="@+id/reagent_search"
        android:layout_below="@+id/reagent_search"
        android:layout_marginEnd="108dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/qita_button"
        android:text="记录查询"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reagent_search" />

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/jiluchaxun_icon"
        app:layout_constraintBottom_toBottomOf="@+id/edit_file"
        app:layout_constraintEnd_toEndOf="@+id/edit_file"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/edit_file"
        app:layout_constraintTop_toTopOf="@+id/edit_file" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/shijichazhao_icon"
        app:layout_constraintBottom_toBottomOf="@+id/Record_query"
        app:layout_constraintEnd_toEndOf="@+id/Record_query"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/Record_query"
        app:layout_constraintTop_toTopOf="@+id/Record_query" />


</android.support.constraint.ConstraintLayout>
