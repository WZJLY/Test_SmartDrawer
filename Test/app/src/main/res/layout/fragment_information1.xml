<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/eT_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_edit"
        android:ems="10"
        android:inputType="number"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/tV_code"
        app:layout_constraintStart_toEndOf="@+id/tV_code"
        app:layout_constraintTop_toTopOf="@+id/tV_code" />

    <TextView
        android:id="@+id/tV_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="试剂条码："
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tV_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="称重重量："
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_code" />

    <EditText
        android:id="@+id/eT_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_edit"
        android:ems="10"
        android:inputType="number"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/tV_weight"
        app:layout_constraintStart_toEndOf="@+id/tV_weight"
        app:layout_constraintTop_toTopOf="@+id/tV_weight2" />

    <Button
        android:id="@+id/btn_code"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_style_denglu"
        android:text="扫码"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/eT_code"
        app:layout_constraintStart_toEndOf="@+id/eT_code"
        app:layout_constraintTop_toTopOf="@+id/eT_code" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="g"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/eT_weight"
        app:layout_constraintStart_toEndOf="@+id/eT_weight" />

</android.support.constraint.ConstraintLayout>
