<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartcabinet.SetupFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btn_binding"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/btn_style_ordinary"
        android:text="智能柜绑定"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_setbox"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_style_ordinary"
        android:text="抽屉设置"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_binding" />

    <Button
        android:id="@+id/btn_hardware"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_style_ordinary"
        android:text="硬件设置"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_setbox" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_style_ordinary"
        android:text="系统升级"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_hardware" />

</android.support.constraint.ConstraintLayout>
