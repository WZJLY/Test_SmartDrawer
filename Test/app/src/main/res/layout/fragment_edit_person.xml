<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/editText_userName3"
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:layout_alignBottom="@+id/textView_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_edit"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10sp"
        android:textAlignment="viewStart"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/editText_userName"
        android:text="账号"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_userName3"
        app:layout_constraintEnd_toStartOf="@+id/editText_userName3"
        app:layout_constraintTop_toTopOf="@+id/editText_userName3" />

    <EditText
        android:id="@+id/editText_userName2"
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:layout_alignBottom="@+id/textView_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_edit"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10sp"
        android:textAlignment="viewStart"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Num" />

    <TextView
        android:id="@+id/textView_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/editText_userName"
        android:text="手机号"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_userName2"
        app:layout_constraintEnd_toStartOf="@+id/editText_userName2"
        app:layout_constraintTop_toTopOf="@+id/editText_userName2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="新增人员"
        android:textColor="@android:color/background_light"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_userName"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/editText_userName"
        android:text="学/工号"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_Num"
        app:layout_constraintEnd_toStartOf="@+id/editText_Num"
        app:layout_constraintTop_toTopOf="@+id/editText_Num" />

    <TextView
        android:id="@+id/textView_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_Num"
        android:layout_below="@+id/textView_Num"
        android:layout_marginEnd="8dp"
        android:text="密码"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_Password"
        app:layout_constraintEnd_toStartOf="@+id/editText_Password"
        app:layout_constraintTop_toTopOf="@+id/editText_Password" />

    <EditText
        android:id="@+id/editText_Num"
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:layout_alignBottom="@+id/textView_Num"
        android:layout_alignStart="@+id/editText_userName"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_edit"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10sp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_userName" />

    <EditText
        android:id="@+id/editText_Password"
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:layout_alignBottom="@+id/textView_Password"
        android:layout_alignStart="@+id/editText_Num"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_edit"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="10sp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_userName3" />

    <TextView
        android:id="@+id/textView_Password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_Password"
        android:layout_below="@+id/textView_Password"
        android:layout_marginEnd="8dp"
        android:text="确认密码"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_Password2"
        app:layout_constraintEnd_toStartOf="@+id/editText_Password2"
        app:layout_constraintTop_toTopOf="@+id/editText_Password2" />

    <EditText
        android:id="@+id/editText_Password2"
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:layout_alignStart="@+id/editText_Password"
        android:layout_alignTop="@+id/textView_Password2"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_edit"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="10sp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Password" />

    <TextView
        android:id="@+id/textViewlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_Password2"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:text="级别"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_level"
        app:layout_constraintEnd_toStartOf="@+id/spinner_level"
        app:layout_constraintTop_toTopOf="@+id/spinner_level" />

    <Spinner
        android:id="@+id/spinner_level"
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:dropDownVerticalOffset="55sp"
        android:layout_alignLeft="@id/dropdown_style"
        android:layout_below="@id/spinner_style"
        android:layout_alignStart="@+id/editText_Password2"
        android:layout_alignTop="@+id/textViewlevel"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_Password2" />

    <EditText
        android:id="@+id/editText_userName"
        android:layout_width="410sp"
        android:layout_height="60sp"
        android:layout_alignBottom="@+id/textView_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_edit"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10sp"
        android:textAlignment="viewStart"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_level" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/editText_userName"
        android:text="姓名"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_userName"
        app:layout_constraintEnd_toStartOf="@+id/editText_userName"
        app:layout_constraintTop_toTopOf="@+id/editText_userName"
        app:layout_constraintVertical_bias="0.545" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_style_denglu"
        android:contentDescription="activity_add_person"
        android:text="保存"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_userName2" />

</android.support.constraint.ConstraintLayout>
